{
  "name": "eayl-jobs-app-frontend",
  "version": "1.0.0",
  "description": "A modern Node.js TypeScript application with ES modules",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "npm run css:watch & tsx watch src/index.ts",
    "build": "npm run css:build && tsc",
    "start": "node dist/src/index.js",
    "serve": "npm run build && npm start",
    "clean": "rm -rf dist public/styles.css",
    "css:build": "npx @tailwindcss/cli -i src/input.css -o public/styles.css --minify",
    "css:watch": "npx @tailwindcss/cli -i src/input.css -o public/styles.css --watch",
    "css:dev": "npx @tailwindcss/cli -i src/input.css -o public/styles.css",
    "type-check": "tsc --noEmit",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint --write .",
    "lint:check": "biome lint .",
    "check": "biome check --write src/ views/ package.json tsconfig.json biome.json",
    "check:ci": "biome ci src/ views/ package.json tsconfig.json biome.json",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "typescript",
    "node",
    "es-modules",
    "tsx"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
    "@tailwindcss/cli": "^4.1.14",
    "@types/express": "^5.0.3",
    "@types/node": "^24.6.0",
    "@types/nunjucks": "^3.2.6",
    "@vitest/coverage-v8": "^3.2.4",
    "daisyui": "^5.1.27",
    "tailwindcss": "^4.1.13",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "express": "^5.1.0",
    "nunjucks": "^3.2.4"
  }
}
