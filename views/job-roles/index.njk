{% extends "layout.njk" %}

{% block navbarActions %}
<a href="/job-roles/create" class="btn btn-primary btn-sm">
    <i data-lucide="plus" class="h-4 w-4 mr-1"></i>
    Create Job Role
</a>
<div class="badge badge-primary badge-lg ml-2">
    {{ count }} positions
</div>
{% endblock %}

{% block header %}
<div class="mb-8">
    <h1 class="text-4xl font-bold text-center mb-2">{{ title }}</h1>
    <p class="text-center text-base-content/70">{{ description }}</p>
</div>
{% endblock %}

{% block content %}

        <!-- Job Roles Table -->
        <div class="max-w-6xl mx-auto">
            {% if hasNoJobs %}
            <div class="bg-base-100 rounded-box shadow-lg">
                <div class="text-center py-12">
                    <div class="text-base-content/50">
                        <i data-lucide="briefcase" class="w-16 h-16 mx-auto mb-4 opacity-50"></i>
                        <h3 class="text-lg font-semibold mb-2">No job roles available</h3>
                        <p class="text-sm">Check back later for new opportunities!</p>
                    </div>
                </div>
            </div>
            {% else %}
            
            <!-- Table Header -->
            <div class="mb-4">
                <h2 class="text-lg font-semibold text-base-content">Current Job Opportunities</h2>
                <p class="text-sm text-base-content/70 mt-1">Find your next career opportunity</p>
            </div>
            
            <!-- Responsive Table -->
            <div class="overflow-x-auto">
                <table class="table table-zebra">
                    <thead>
                        <tr>
                            <th>Role</th>
                            <th>Location</th>
                            <th>Capability</th>
                            <th>Band</th>
                            <th>Closing Date</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for jobRole in jobRoles %}
                        <tr>
                            <!-- Role Name -->
                            <td>
                                <div>
                                    <div class="font-bold">{{ jobRole.roleName }}</div>
                                </div>
                            </td>
                            
                            <!-- Location -->
                            <td>
                                <div class="flex items-center gap-2">
                                    <i data-lucide="map-pin" class="w-4 h-4 opacity-70"></i>
                                    {{ jobRole.location }}
                                </div>
                            </td>
                            
                            <!-- Capability -->
                            <td>
                                {{ jobRole.capability }}
                            </td>
                            
                            <!-- Band -->
                            <td>
                                {{ jobRole.band }}
                            </td>
                            
                            <!-- Closing Date -->
                            <td>
                                <div class="flex items-center gap-2 text-sm">
                                    <i data-lucide="calendar" class="w-4 h-4 opacity-70"></i>
                                    {{ jobRole.formattedClosingDate }}
                                </div>
                            </td>
                            
                            <!-- Actions -->
                            <td>
                                <a href="/job-roles/{{ jobRole.id }}" class="btn btn-primary btn-xs">
                                    <i data-lucide="eye" class="w-3 h-3"></i>
                                    View
                                </a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            
            {% endif %}
        </div>
{% endblock %}