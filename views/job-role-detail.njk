<!DOCTYPE html>
<html lang="en" data-theme="lofi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
    <link href="/styles.css" rel="stylesheet">
</head>
<body class="bg-base-200 min-h-screen">
    <div class="container mx-auto p-6">
        <!-- Navigation -->
        <div class="mb-6">
            <a href="/job-roles" class="btn btn-ghost btn-sm">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Back to Job Roles
            </a>
        </div>

        {% if jobRole %}
        <!-- Job Role Details -->
        <div class="max-w-4xl mx-auto">
            <!-- Header Card -->
            <div class="card bg-base-100 shadow-xl mb-6">
                <div class="card-body">
                    <div class="flex flex-col sm:flex-row items-start gap-4">
                        <!-- Avatar -->
                        <div class="avatar placeholder">
                            <div class="bg-primary text-primary-content w-16 h-16 rounded-full">
                                <span class="text-2xl font-bold">{{ jobRole.firstLetter }}</span>
                            </div>
                        </div>
                        
                        <!-- Title and Description -->
                        <div class="flex-1">
                            <h1 class="card-title text-3xl mb-2">{{ jobRole.roleName }}</h1>
                            <p class="text-base-content/70 mb-4">{{ description }}</p>
                            
                            <!-- Quick Info -->
                            <div class="flex flex-wrap gap-4 text-sm">
                                <div class="flex items-center gap-2">
                                    <svg class="w-4 h-4 opacity-70" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    </svg>
                                    <span class="font-medium">{{ jobRole.location }}</span>
                                </div>
                                <div class="flex items-center gap-2">
                                    <svg class="w-4 h-4 opacity-70" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                                    </svg>
                                    <span class="font-medium">{{ jobRole.capability }}</span>
                                </div>
                                <div class="flex items-center gap-2">
                                    <svg class="w-4 h-4 opacity-70" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
                                    </svg>
                                    <span class="badge badge-secondary badge-sm">{{ jobRole.band }}</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Details Grid -->
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                <!-- Main Content -->
                <div class="lg:col-span-2 space-y-6">
                    <!-- Job Information -->
                    <div class="card bg-base-100 shadow-xl">
                        <div class="card-body">
                            <h2 class="card-title">Job Information</h2>
                            <div class="space-y-4">
                                <div>
                                    <h3 class="font-semibold text-sm uppercase tracking-wide text-base-content/70 mb-2">Role Name</h3>
                                    <p class="text-lg">{{ jobRole.roleName }}</p>
                                </div>
                                <div>
                                    <h3 class="font-semibold text-sm uppercase tracking-wide text-base-content/70 mb-2">Capability</h3>
                                    <p class="text-lg">{{ jobRole.capability }}</p>
                                </div>
                                <div>
                                    <h3 class="font-semibold text-sm uppercase tracking-wide text-base-content/70 mb-2">Band Level</h3>
                                    <span class="badge badge-accent badge-lg">{{ jobRole.band }}</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Location & Timing -->
                    <div class="card bg-base-100 shadow-xl">
                        <div class="card-body">
                            <h2 class="card-title">Location & Timing</h2>
                            <div class="space-y-4">
                                <div>
                                    <h3 class="font-semibold text-sm uppercase tracking-wide text-base-content/70 mb-2">Location</h3>
                                    <div class="flex items-center gap-2">
                                        <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                        </svg>
                                        <span class="text-lg">{{ jobRole.location }}</span>
                                    </div>
                                </div>
                                <div>
                                    <h3 class="font-semibold text-sm uppercase tracking-wide text-base-content/70 mb-2">Application Closing Date</h3>
                                    <div class="flex items-center gap-2">
                                        <svg class="w-5 h-5 text-warning" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                        </svg>
                                        <span class="text-lg font-medium">{{ jobRole.formattedClosingDate }}</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Sidebar -->
                <div class="space-y-6">
                    <!-- Quick Actions -->
                    <div class="card bg-base-100 shadow-xl">
                        <div class="card-body">
                            <h2 class="card-title text-sm">Quick Actions</h2>
                            <div class="card-actions flex-col gap-3">
                                <button class="btn btn-primary btn-block">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                                    </svg>
                                    Apply Now
                                </button>
                                <button class="btn btn-outline btn-block">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                                    </svg>
                                    Save Job
                                </button>
                                <button class="btn btn-ghost btn-block">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z"></path>
                                    </svg>
                                    Share Job
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Job Reference -->
                    <div class="card bg-base-100 shadow-xl">
                        <div class="card-body">
                            <h2 class="card-title text-sm">Job Reference</h2>
                            <div class="text-center p-4">
                                <div class="text-2xl font-mono font-bold text-primary">{{ jobRole.id }}</div>
                                <div class="text-sm text-base-content/70 mt-1">Job ID</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {% else %}
        <!-- Error State -->
        <div class="max-w-2xl mx-auto">
            <div class="card bg-base-100 shadow-xl">
                <div class="card-body text-center py-12">
                    <div class="text-error">
                        <svg class="w-16 h-16 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                        </svg>
                        <h2 class="text-2xl font-bold mb-2">{{ title }}</h2>
                        <p class="text-base-content/70 mb-4">{{ description }}</p>
                        {% if error %}
                        <div class="alert alert-error max-w-md mx-auto">
                            <svg class="w-6 h-6 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            <span>{{ error }}</span>
                        </div>
                        {% endif %}
                        <div class="mt-6">
                            <a href="/job-roles" class="btn btn-primary">
                                Browse All Job Roles
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endif %}

        <!-- Footer -->
        <div class="text-center mt-8">
            <div class="text-base-content/60 text-sm">
                Last updated: {{ currentDateTime }}
            </div>
        </div>
    </div>
</body>
</html>