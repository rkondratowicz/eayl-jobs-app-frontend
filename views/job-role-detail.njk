{% extends "layout.njk" %}

{% block navbarActions %}
<a href="/job-roles" class="btn btn-ghost btn-sm">
    <i data-lucide="arrow-left" class="w-4 h-4"></i>
    Back to Job Roles
</a>
{% endblock %}

{% block content %}

        {% if jobRole %}
        <!-- Job Role Details -->
        <div class="max-w-4xl mx-auto">
            <!-- Header Section -->
            <div class="card bg-base-100 shadow-sm mb-8">
                <div class="card-body">
                    <div class="space-y-6">
                        <!-- Title and Description -->
                        <div>
                            <h1 class="text-4xl font-bold text-base-content mb-3">{{ jobRole.roleName }}</h1>
                            <p class="text-lg text-base-content/70 leading-relaxed">{{ description }}</p>
                        </div>
                        
                        <!-- Key Information Grid -->
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 pt-4 border-t border-base-300">
                            <div class="space-y-2">
                                <div class="flex items-center gap-2 text-base-content/60">
                                    <i data-lucide="map-pin" class="w-4 h-4"></i>
                                    <span class="text-sm font-medium uppercase tracking-wide">Location</span>
                                </div>
                                <p class="text-base font-semibold">{{ jobRole.location }}</p>
                            </div>
                            <div class="space-y-2">
                                <div class="flex items-center gap-2 text-base-content/60">
                                    <i data-lucide="building" class="w-4 h-4"></i>
                                    <span class="text-sm font-medium uppercase tracking-wide">Capability</span>
                                </div>
                                <p class="text-base font-semibold">{{ jobRole.capability }}</p>
                            </div>
                            <div class="space-y-2">
                                <div class="flex items-center gap-2 text-base-content/60">
                                    <i data-lucide="award" class="w-4 h-4"></i>
                                    <span class="text-sm font-medium uppercase tracking-wide">Band Level</span>
                                </div>
                                <p class="text-base font-semibold">{{ jobRole.band }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Details Grid -->
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                <!-- Main Content -->
                <div class="lg:col-span-2 space-y-8">
                    <!-- Job Information -->
                    <div class="card bg-base-100 shadow-sm">
                        <div class="card-body">
                            <h2 class="text-xl font-bold mb-6">Job Information</h2>
                            <div class="space-y-6">
                                <div>
                                    <h3 class="text-sm font-medium uppercase tracking-wider text-base-content/60 mb-2">Role Name</h3>
                                    <p class="text-lg font-medium text-base-content">{{ jobRole.roleName }}</p>
                                </div>
                                <div>
                                    <h3 class="text-sm font-medium uppercase tracking-wider text-base-content/60 mb-2">Capability</h3>
                                    <p class="text-lg font-medium text-base-content">{{ jobRole.capability }}</p>
                                </div>
                                <div>
                                    <h3 class="text-sm font-medium uppercase tracking-wider text-base-content/60 mb-2">Band Level</h3>
                                    <p class="text-lg font-semibold text-primary">{{ jobRole.band }}</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Application Details -->
                    <div class="card bg-base-100 shadow-sm">
                        <div class="card-body">
                            <h2 class="text-xl font-bold mb-6">Application Details</h2>
                            <div class="space-y-6">
                                <div>
                                    <h3 class="text-sm font-medium uppercase tracking-wider text-base-content/60 mb-2">Location</h3>
                                    <div class="flex items-center gap-3">
                                        <i data-lucide="map-pin" class="w-5 h-5 text-base-content/60"></i>
                                        <span class="text-lg font-medium">{{ jobRole.location }}</span>
                                    </div>
                                </div>
                                <div>
                                    <h3 class="text-sm font-medium uppercase tracking-wider text-base-content/60 mb-2">Application Closing Date</h3>
                                    <div class="flex items-center gap-3">
                                        <i data-lucide="calendar" class="w-5 h-5 text-base-content/60"></i>
                                        <span class="text-lg font-semibold text-warning">{{ jobRole.formattedClosingDate }}</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Sidebar -->
                <div class="space-y-8">
                    <!-- Actions -->
                    <div class="card bg-base-100 shadow-sm">
                        <div class="card-body">
                            <h2 class="text-lg font-bold mb-4">Actions</h2>
                            <div class="space-y-3">
                                <button class="btn btn-primary btn-block justify-start">
                                    <i data-lucide="plus" class="w-4 h-4"></i>
                                    Apply Now
                                </button>
                                <button class="btn btn-outline btn-block justify-start">
                                    <i data-lucide="heart" class="w-4 h-4"></i>
                                    Save Job
                                </button>
                                <button class="btn btn-ghost btn-block justify-start">
                                    <i data-lucide="share-2" class="w-4 h-4"></i>
                                    Share Job
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Reference -->
                    <div class="card bg-base-100 shadow-sm">
                        <div class="card-body">
                            <h2 class="text-lg font-bold mb-4">Reference</h2>
                            <div class="text-center">
                                <div class="text-2xl font-mono font-bold text-primary mb-1">{{ jobRole.id }}</div>
                                <div class="text-sm text-base-content/60">Job ID</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {% else %}
        <!-- Error State -->
        <div class="max-w-2xl mx-auto">
            <div class="card bg-base-100 shadow-xl">
                <div class="card-body text-center py-12">
                    <div class="text-error">
                        <i data-lucide="alert-triangle" class="w-16 h-16 mx-auto mb-4"></i>
                        <h2 class="text-2xl font-bold mb-2">{{ title }}</h2>
                        <p class="text-base-content/70 mb-4">{{ description }}</p>
                        {% if error %}
                        <div class="alert alert-error max-w-md mx-auto">
                            <i data-lucide="x-circle" class="w-6 h-6 shrink-0"></i>
                            <span>{{ error }}</span>
                        </div>
                        {% endif %}
                        <div class="mt-6">
                            <a href="/job-roles" class="btn btn-primary">
                                Browse All Job Roles
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endif %}
{% endblock %}