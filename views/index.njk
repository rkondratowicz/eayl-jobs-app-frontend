{% extends "layout.njk" %}

{% block bodyClass %}bg-base-200 text-base-content{% endblock %}

{% block containerClass %}max-w-4xl mx-auto p-8{% endblock %}

{% block header %}
<header class="text-center mb-8">
    <h1 class="text-primary text-4xl font-bold mb-2">{{ title }}</h1>
    <p class="text-base-content/70 text-lg">{{ description }}</p>
</header>
{% endblock %}

{% block content %}

    <div class="card bg-base-100 shadow-xl mb-4">
        <div class="card-body">
            <div class="alert alert-info">
                <i data-lucide="info" class="stroke-current shrink-0 w-6 h-6"></i>
                <div>
                    <h3 class="font-bold">Welcome to your Nunjucks-powered app!</h3>
                    <div class="text-xs">This template is now styled with Tailwind CSS, DaisyUI components, and rendered using Nunjucks templating engine.</div>
                </div>
            </div>
            <p class="mt-4"><strong class="font-medium">Message:</strong> {{ message }}</p>
            <div class="card-actions justify-end mt-4">
                <button class="btn btn-primary">Get Started</button>
                <button class="btn btn-outline">Learn More</button>
            </div>
        </div>
    </div>

    <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
            <h2 class="card-title">Template Features</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-4">
                <div class="badge badge-primary badge-lg">
                    <i data-lucide="zap" class="w-4 h-4 mr-2 stroke-current"></i>
                    Server-side rendering with Nunjucks
                </div>
                <div class="badge badge-secondary badge-lg">
                    <i data-lucide="check-circle" class="w-4 h-4 mr-2 stroke-current"></i>
                    TypeScript support
                </div>
                <div class="badge badge-accent badge-lg">
                    <i data-lucide="server" class="w-4 h-4 mr-2 stroke-current"></i>
                    Express.js backend
                </div>
                <div class="badge badge-info badge-lg">
                    <i data-lucide="palette" class="w-4 h-4 mr-2 stroke-current"></i>
                    Tailwind CSS + DaisyUI
                </div>
            </div>
            
            <div class="divider">Component Examples</div>
            
            <div class="flex flex-wrap gap-2 justify-center">
                <div class="tooltip" data-tip="Primary Button">
                    <button class="btn btn-primary btn-sm">Primary</button>
                </div>
                <div class="tooltip" data-tip="Secondary Button">
                    <button class="btn btn-secondary btn-sm">Secondary</button>
                </div>
                <div class="tooltip" data-tip="Success Button">
                    <button class="btn btn-success btn-sm">Success</button>
                </div>
                <div class="tooltip" data-tip="Warning Button">
                    <button class="btn btn-warning btn-sm">Warning</button>
                </div>
                <div class="tooltip" data-tip="Error Button">
                    <button class="btn btn-error btn-sm">Error</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}